<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/note_item_padding"
    android:paddingVertical="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/background_card"
        app:cardCornerRadius="8dp"
        >
    </androidx.cardview.widget.CardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_tag"
        style="@style/NoteTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card_holder"
        app:layout_constraintTop_toTopOf="@id/card_holder"
        tools:text="#Cenfotec"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/note_tag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Definir Tarea #2"
        style="@style/NoteTitle"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/note_item_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Definir los requisitos a tomar en cuenta para la tarea 2"
        style="@style/NoteDescription"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_delete_note"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete"
        android:backgroundTint="@color/background_card"
        app:tint="@color/white"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="@id/card_holder"/>




</androidx.constraintlayout.widget.ConstraintLayout>