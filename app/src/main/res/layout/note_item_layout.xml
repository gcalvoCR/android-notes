<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/note_item_padding"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Definir Tarea #2"
        style="@style/TextAppearance.Material3.BodyLarge"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/note_item_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Definir los requisitos a tomar en cuenta para la tarea 2"
        style="@style/TextAppearance.Material3.BodyMedium"
        />


</androidx.constraintlayout.widget.ConstraintLayout>